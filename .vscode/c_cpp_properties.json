{
    "configurations": [
        {
            "name": "Win32",
            "includePath": [
                "${workspaceFolder}/**",
                "${env.includePath}"
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE",
                "_GLIBCXX_HAS_GTHREADS",
                "_GLIBCXX_USE_C99_STDINT_TR1"
            ],
            "windowsSdkVersion": "8.1",
            "compilerPath": "${env.CppComplier}", //将CppComplier指定为g++路径，并添加到用户环境变量中
            "cStandard": "c17",
            "cppStandard": "c++17",
            "intelliSenseMode": "gcc-x64"
        }
    ],
    "version": 4
}